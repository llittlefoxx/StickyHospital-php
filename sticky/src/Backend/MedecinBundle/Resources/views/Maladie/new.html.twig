{% extends "BackendMedecinBundle::layout.html.twig" %}
{% block haed %}
    {{ parent() }}
    {% block title %}{{ parent() }} Maladies {% endblock %}
{% endblock %}
{% block menu %}
                <!-- Left side column. contains the logo and sidebar -->
                <aside class="main-sidebar">

                    <!-- sidebar: style can be found in sidebar.less -->
                    <section class="sidebar">

                        <!-- Sidebar user panel (optional) -->
                        <div class="user-panel">
                            <div class="pull-left image">
                                <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
                            </div>
                            <div class="pull-left info">
                                <p>Alexander Pierce</p>
                                <!-- Status -->
                                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                            </div>
                        </div>

                        <!-- Sidebar Menu -->
                        <ul class="sidebar-menu">
                            <!-- Optionally, you can add icons to the links -->
                            <li><a href="#">Planification des RDVs</a><</li>
                            <li>
                                <a href="">
                                    <i class="fa fa-folder"></i> Dossier Médical
                                </a>
                            </li>

                        </ul><!-- /.sidebar-menu -->
                    </section>
                    <!-- /.sidebar -->
                </aside>
{% endblock %}
{% block main %}
    {% block box %}
        <div class="box box-primary">
            <div class="box-header">
            <a href="{{path('backend_hospital_dossiermedical',{'id':id})}}"> <i class="fa  fa-reply pull-left"></i> </a><h3 class="box-title">Ajout Maladie</h3>
            </div><!-- /.box-header -->
            <form action="" method ="post" {{ form_enctype(Form) }} role="form">
                <div class="box-body">
                    <div class="form-group">    
                        <label>Nom Maladie: </label>
                        {{form_widget(Form.nomMaladie)}}
                    </div>   
                    <div class="form-group">    
                        <label>Numéro du Dossier: </label>
                        {{form_widget(Form.idDossiermedical)}}
                    </div>  
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    {{form_rest(Form)}}
                </div>
            </form>
            {{form_errors(Form)}}
            {#{{form(Form)}}
            {{form_errors(Form)}}#}

        {% endblock  %}
    {% endblock  %}
