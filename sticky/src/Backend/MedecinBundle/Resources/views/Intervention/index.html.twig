{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Intervention list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libintervention</th>
                <th>Prixinterv</th>
                <th>Dateinterv</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('intervention_show', { 'id': entity.idIntervention}) }}">{{ entity.idIntervention }}</a></td>
                <td>{{ entity.libIntervention }}</td>
                <td>{{ entity.prixInterv }}</td>
                <td>{% if entity.dateInterv %}{{ entity.dateInterv|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('intervention_show', { 'id': entity.idIntervention }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('intervention_edit', { 'id': entity.idIntervention }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('intervention_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
