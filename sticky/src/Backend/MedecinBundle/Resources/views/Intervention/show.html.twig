{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Intervention</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.idIntervention }}</td>
            </tr>
            <tr>
                <th>Libintervention</th>
                <td>{{ entity.libIntervention }}</td>
            </tr>
            <tr>
                <th>Prixinterv</th>
                <td>{{ entity.prixInterv }}</td>
            </tr>
            <tr>
                <th>Dateinterv</th>
                <td>{{ entity.dateInterv|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('intervention') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('intervention_edit', { 'id': entity.idIntervention }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
