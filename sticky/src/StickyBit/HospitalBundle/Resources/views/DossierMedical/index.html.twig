{% extends "StickyBitHospitalBundle::layout.html.twig" %}
{% block title %}{{ parent() }} Home Page {% endblock %}
{% block stylesheet %}
    {{parent()}}
    <style>
        a:hover, a:active, a:focus{
            color: #E60A0A;
        }
   </style>
{% endblock %}
{%block header %}
{% endblock %}
{% block main %}   
<section class="invoice">
          <!-- title row -->
          <div class="row">
            <div class="col-xs-12">
              <h2 class="page-header">
                <i class="fa fa-globe"></i> {{ entity.idDossierpatient.idPatient.nomPatient }} {{ entity.idDossierpatient.idPatient.prenomPatient }}
                <small class="pull-right">Date: {{ entity.idDossierpatient.dateCreationDossier |date('d/m/Y') }}</small>
              </h2>
            </div><!-- /.col -->
          </div>
          <div class="row invoice-info">
            
            
            <div class="col-sm-4 invoice-col">
              <b>Dossier #{{ entity.idDossierMedical }}</b><br/>
              <br/>
              <b>Date Naissance:</b> {{ entity.idDossierpatient.idPatient.dateNPatient |date('d/m/Y')  }} <br/>
              <b>Sexe:</b> {{ entity.idDossierpatient.idPatient.sexPatient }}<br/>
              <b>Adresse:</b> {{ entity.idDossierpatient.idPatient.adresse }}<br/>
              <b>Tél:</b> {{ entity.idDossierpatient.idPatient.telPatient }}
            </div><!-- /.col -->
          </div><!-- /.row -->
    <!-- Table row -->
      <div class="box box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">Information Médical</h3>
          <div class="row">
            <div class="col-xs-12 table-responsive">
              
                        <div class="box-body">
                            <div id="accordion" class="box-group">
                                <div class="panel box box-primary">
                                    <div class="box-header with-border">
                                        <h4 class="box-title"><a class="collapsed">List des Interventions</a></h4>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Intervention</th>
                    <th>Libelle Intervention</th>
                    <th>Prix Intervention</th>
                    <th>Date Intervention</th>
                    <th>Traitement</th>
                  </tr>
                </thead>
                <tbody>
                    {% for intervention in Interventions %}
                  <tr>
                    <td>{{ intervention.idIntervention}}</td>
                    <td>{{ intervention.libIntervention }}</td>
                    <td>{{ intervention.prixInterv }}</td>
                    <td>{{ intervention.dateInterv |date('d/m/Y') }}</td>
                    
                  </tr>
                  
                  {% endfor %}
                </tbody>
              </table>
                                    </div>
                                </div>
                        </div>
                        </div>
            </div><!-- /.col -->
          </div><!-- /.row -->

          <div class="row">
           <div class="col-xs-12 table-responsive">
               <div class="box-body">
                            <div id="accordion" class="box-group">
                                <div class="panel box box-primary">
                                    <div class="box-header with-border">
                                        <h4 class="box-title"><a class="collapsed">List des Allergies</a></h4>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Allergie</th>
                    <th>Nom Allergie</th>
                  </tr>
                </thead>
                <tbody>
                    {% for allergie in Allergies %}
                  <tr>
                      <td>{{ allergie.idAllergie }}</td> 
                      <td>{{ allergie.nomAllergie }}</td>
                    
                  </tr>
                    {%endfor%}
                </tbody>
              </table>
                                    </div>
                                </div>
                            </div>
               </div>
            </div><!-- /.col -->
          </div><!-- /.row -->
          
          <div class="row">
           <div class="col-xs-12 table-responsive">
               <div class="box-body">
                            <div id="accordion" class="box-group">
                                <div class="panel box box-primary">
                                    <div class="box-header with-border">
                                        <h4 class="box-title"><a class="collapsed">List des observations</a></h4>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Observation</th>
                    <th>Description</th>
                    <th>Date Observation</th>
                  </tr>
                </thead>
                <tbody>
                    {% for observation in Observations %}
                  <tr>
                      <td>{{ observation.idObservation }}</td> 
                      <td>{{ observation.texte }}</td>
                      <td>{{ observation.dateObservation |date('d/m/Y') }}</td>
                  </tr>
                    {%endfor%}
                </tbody>
              </table>
                                    </div>
                                </div>
                            </div>
               </div>
            </div><!-- /.col -->
          </div><!-- /.row -->
          
          <div class="row">
           <div class="col-xs-12 table-responsive">
               <div class="box-body">
                            <div id="accordion" class="box-group">
                                <div class="panel box box-primary">
                                    <div class="box-header with-border">
                                        <h4 class="box-title"><a class="collapsed">List des Maladies</a></h4>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Maladie</th>
                    <th>Nom Maladie</th>
                  </tr>
                </thead>
                <tbody>
                    {% for maladie in Maladies %}
                  <tr>
                      <td>{{ maladie.idMaladie}}</td> 
                      <td>{{ maladie.nomMaladie }}</td> 
                  </tr>
                    {%endfor%}
                </tbody>
              </table>
                                    </div>
                                </div>
                            </div>
               </div>
            </div><!-- /.col -->
          </div><!-- /.row -->
          
          <div class="row">
           <div class="col-xs-12 table-responsive">
               <div class="box-body">
                    <div id="accordion" class="box-group">
                    <div class="panel box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title"><a class="collapsed">Liste des Traitements</a></h4>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Traitement</th>
                    <th>Libellé Traitement</th>
                    <th>Prix Traitement</th>
                    
                  </tr>
                </thead>
                <tbody>
                    {% for traitement in Traitements %}
                  <tr>
                      <td>{{ traitement.idTraitement }}</td> 
                      <td>{{ traitement.libTraitement }}</td>
                      <td>{{ traitement.prixTraitement }}</td>
                  </tr>
                    {%endfor%}
                </tbody>
              </table>
                    </div>
                    </div>
                    </div>
               </div>
            </div><!-- /.col -->
          </div><!-- /.row -->
          
          <div class="row">
           <div class="col-xs-12 table-responsive">
               <div class="box-body">
                            <div id="accordion" class="box-group">
                                <div class="panel box box-primary">
                                    <div class="box-header with-border">
                                        <h4 class="box-title"><a class="collapsed">List des Ordonnaces</a></h4>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Ordonnace</th>
                    <th>Description</th>
                    <th>Date Ordonnance</th>
                    <th>Médicament</th>
                  </tr>
                </thead>
                <tbody>
                    {% for ordonnance in Ordonnances %}
                  <tr>
                      <td>{{ ordonnance.idOrdonnance }}</td> 
                      <td>{{ ordonnance.description }}</td>
                      <td>{{ ordonnance.dateOrdonnance }}</td>
                      <td>{{ ordonnance.idMedicament }}</td>
                  </tr>
                    {%endfor%}
                </tbody>
                
              </table>
                                    </div>
                                </div>
                            </div>
               </div>
            </div><!-- /.col -->
          </div><!-- /.row -->
           </div>
                </div>
          <!-- this row will not appear when printing -->
          <div class="row no-print">
            <div class="col-xs-12">
              <a href="{{ path('frontend_patient_printdossierMedical', { 'id': entity.idDossierMedical }) }}" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
             
              <button class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generate PDF</button>
            </div>
          </div>
        </section><!-- /.content -->
        
{% endblock %}
