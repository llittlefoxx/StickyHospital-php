<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>StickyHospital | Dossier Médecal</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.2 -->
    <link href="../../bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="http://code.ionicframework.com/ionicons/2.0.0/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="../../dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>
    <body onload="window.print();">
     
    <h1>DossierMedical</h1>
   
 <section class="invoice">
          <!-- title row -->
          <div class="row">
            <div class="col-xs-12">
              <h2 class="page-header">
                <i class="fa fa-globe"></i> {{ entity.idDossierpatient.idPatient.nomPatient }} {{ entity.idDossierpatient.idPatient.prenomPatient }}
                <small class="pull-right">Date: {{ entity.idDossierpatient.dateCreationDossier |date('d/m/Y') }}</small>
              </h2>
            </div><!-- /.col -->
          </div>
          <div class="row invoice-info">
            
            
            <div class="col-sm-4 invoice-col">
              <b>Dossier #{{ entity.idDossierMedical }}</b><br/>
              <br/>
              <b>Date Naissance:</b> {{ entity.idDossierpatient.idPatient.dateNPatient |date('d/m/Y')  }} <br/>
              <b>Sexe:</b> {{ entity.idDossierpatient.idPatient.sexPatient }}<br/>
              <b>Adresse:</b> {{ entity.idDossierpatient.idPatient.adresse }}<br/>
              <b>Tél:</b> {{ entity.idDossierpatient.idPatient.telPatient }}
            </div><!-- /.col -->
          </div><!-- /.row -->

          <!-- Table row -->
          <div class="row">
            <div class="col-xs-12 table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Intervention</th>
                    <th>Libelle Intervention</th>
                    <th>Prix Intervention</th>
                    <th>Date Intervention</th>
                  </tr>
                </thead>
                <tbody>
                  {% for intervention in Interventions %}
                  <tr>
                    <td>{{ intervention.idIntervention}}</td>
                    <td>{{ intervention.libIntervention }}</td>
                    <td>{{ intervention.prixInterv }}</td>
                    <td>{{ intervention.dateInterv |date('d/m/Y') }}</td>                  
                  </tr>
                  {% endfor %}
                  
                </tbody>
              </table>
            </div><!-- /.col -->
          </div><!-- /.row -->

          <div class="row">
           <div class="col-xs-12 table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Allergie</th>
                    <th>Nom Allergie</th>
                  </tr>
                </thead>
                <tbody>
                {% for allergie in Allergies %}
                  <tr>
                      <td>{{ allergie.idAllergie }}</td> 
                      <td>{{ allergie.nomAllergie }}</td>
                    
                  </tr>
                    {%endfor%}
                </tbody>
              </table>
            </div><!-- /.col -->
          </div><!-- /.row -->
           <div class="row">
           <div class="col-xs-12 table-responsive">
              <table class="table table-striped">
                 <thead>
                  <tr>
                    <th>Numéro Maladie</th>
                    <th>Nom Maladie</th>
                  </tr>
                </thead>
                <tbody>
                    {% for maladie in Maladies %}
                  <tr>
                      <td>{{ maladie.idMaladie}}</td> 
                      <td>{{ maladie.nomMaladie }}</td> 
                  </tr>
                    {%endfor%}
                </tbody>
              </table>
            </div><!-- /.col -->
          </div><!-- /.row -->
           <div class="row">
           <div class="col-xs-12 table-responsive">
              <table class="table table-striped">
               <thead>
                  <tr>
                    <th>Numéro Traitement</th>
                    <th>Libellé Traitement</th>
                    <th>Prix Traitement</th>
                    
                  </tr>
                </thead>
                <tbody>
                    {% for traitement in Traitements %}
                  <tr>
                      <td>{{ traitement.idTraitement }}</td> 
                      <td>{{ traitement.libTraitement }}</td>
                      <td>{{ traitement.prixTraitement }}</td>
                  </tr>
                    {%endfor%}
                </tbody>
              </table>
            </div><!-- /.col -->
          </div><!-- /.row -->
           <div class="row">
           <div class="col-xs-12 table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Numéro Ordonnace</th>
                    <th>Description</th>
                    <th>Date Ordonnance</th>
                    <th>Médicament</th>
                  </tr>
                </thead>
                <tbody>
                    {% for ordonnance in Ordonnances %}
                  <tr>
                      <td>{{ ordonnance.idOrdonnance }}</td> 
                      <td>{{ ordonnance.description }}</td>
                      <td>{{ ordonnance.dateOrdonnance }}</td>
                      <td>{{ ordonnance.idMedicament }}</td>
                  </tr>
                    {%endfor%}
                </tbody>
              </table>
            </div><!-- /.col -->
          </div><!-- /.row -->
         
          <!-- this row will not appear when printing -->
         
        </section><!-- /.content -->
        
  
    <script src="{{asset('dist/js/app.min.js') }}" type="text/javascript"></script>
    </body>
   