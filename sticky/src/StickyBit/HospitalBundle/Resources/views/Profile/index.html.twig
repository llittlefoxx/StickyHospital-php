{% extends "StickyBitHospitalBundle::layout.html.twig" %}
{% block title %}{{ parent() }} Home Page {% endblock %}
{% block stylesheet %}
    {{ parent()}}
    <link rel="stylesheet" type="text/css" href="http://snipplicious.com/css/bootstrap-3.2.0.min.css">

    <link rel="stylesheet" type="text/css" href="http://snipplicious.com/css/font-awesome-4.1.0.min.css">

    <script src="http://snipplicious.com/js/jquery.js"></script>
    <script src="http://snipplicious.com/js/bootstrap.min.js"></script>
    <style>
        .container {
            width: 1122px;
        }
        input,select{
            display: table-cell;
            border-radius: 0px !important;
            border-color: #D2D6DE;
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857;
            color: #555;
            background-image: none;
            border: 1px solid #CCC;
            box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset;
            transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
        }
    </style>

{% endblock %}
{%block header %}
{% endblock %}
{% block main %}   
    <div class="container">
        <h1 class="page-header">Edit Profile</h1>
        <div class="row">
            <!-- left column -->
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="text-center">
                    <img src="http://lorempixel.com/200/200/people/9/" class="avatar img-circle img-thumbnail" alt="avatar">
                    <h6>Upload a different photo...</h6>
                    <input type="file" class="text-center center-block well well-sm">
                    <a class="btn btn-social btn-facebook"><i class="fa fa-facebook"></i></a>
                    <a class="btn btn-social btn-flickr"><i class="fa fa-flickr"></i></a>
                    <a class="btn btn-social btn-google-plus"><i class="fa fa-google-plus"></i></a>
                    <a class="btn btn-social btn-twitter"><i class="fa fa-twitter"></i></a>

                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="text-center">


                </div>
            </div>
            <!-- edit form column -->
            <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
                <div class="alert alert-info alert-dismissable">
                    <a class="panel-close close" data-dismiss="alert">Ã—</a> 
                    <i class="fa fa-coffee"></i>
                    This is an <strong>.alert</strong>. Use this to show important messages to the user.
                </div>
                <h3>Personal info</h3>
                <form class="form-horizontal" role="form" action="" method ="post" {{ form_enctype(Form) }}>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">First name:</label>
                        <div class="col-lg-8 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            {{form_widget(Form.prenomPatient)}}
                            {{ form_errors(Form.prenomPatient) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Last name:</label>
                        <div class="col-lg-8 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            {{form_widget(Form.nomPatient)}}
                            {{ form_errors(Form.nomPatient) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Adresse:</label>
                        <div class="col-lg-8 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-home"></i>
                            </div>
                            {{form_widget(Form.adresse)}}
                            {{ form_errors(Form.adresse) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Email:</label>
                        <div class="col-lg-8 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            {{form_widget(Form.mailPatient)}}
                            {{ form_errors(Form.mailPatient) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Tel:</label>
                        <div class="col-lg-8 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            {{form_widget(Form.telPatient)}}
                            {{form_errors(Form.telPatient)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Sexe:</label>
                        <div class="col-lg-8 input-group input-group-sm">
                            <div class="input-group-addon">
                                <i class="fa fa-female"></i>
                            </div>
                            {{form_widget(Form.sexPatient)}}
                            {{form_errors(Form.sexPatient)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">CIN:</label>
                        <div class="col-lg-8 input-group input-group-sm">
                            <div class="input-group-addon">
                                <i class="fa fa-credit-card"></i>
                            </div>
                            {{form_widget(Form.cinPatient)}}
                            {{form_errors(Form.cinPatient)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Date Naissance:</label>
                        <div class="col-md-8 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            {{form_widget(Form.dateNPatient)}}
                            {{form_errors(Form.dateNPatient)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input class="btn bg-navy margin" value="Save Changes" type="submit">
                            <span></span>
                            <input class="btn bg-gray margin" value="Cancel" type="reset">
                        </div>
                    </div>
                    <div class="alert alert-danger alert-dismissable">
                        <button class="close" aria-hidden="true" data-dismiss="alert" type="button">x</button>
                        <h4>
                            <i class="icon fa fa-ban"></i>
                            Alert!
                        </h4>
                        {{form_errors(Form)}}
                    </div>
                </form>


            </div>
        </div>
    </div>
{% endblock %}


